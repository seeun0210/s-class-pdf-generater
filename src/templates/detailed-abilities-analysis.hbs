<!-- src/pdf/templates/detailed-abilities-analysis.hbs -->
<html lang='ko'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>세부역량 분석 보고서</title>
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@300;400;500;700&display=swap');

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: 'Noto Sans KR', sans-serif;
        line-height: 1.8;
        color: #000;
        margin: 0;
        padding: 40px;
        background-color: #ffffff;
        font-size: 14px;
      }

      .header {
        text-align: center;
        margin-bottom: 40px;
        padding-bottom: 20px;
        border-bottom: 2px solid #ddd;
      }

      .header-title {
        font-size: 20px;
        font-weight: 700;
        color: #000;
        margin-bottom: 10px;
      }

      .header-date {
        font-size: 14px;
        color: #666;
      }

      .section {
        margin-bottom: 35px;
        page-break-inside: avoid;
      }

      .subject-title {
        font-size: 17px;
        font-weight: 700;
        color: #000;
        margin-bottom: 15px;
        padding-bottom: 8px;
        border-bottom: 1px solid #ddd;
      }

      .subsection {
        margin-bottom: 20px;
      }

      .subsection-title {
        font-size: 15px;
        font-weight: 600;
        color: #333;
        margin-bottom: 12px;
      }

      .content {
        background-color: #f9f9f9;
        padding: 18px;
        border-radius: 5px;
        white-space: pre-wrap;
        font-size: 14px;
        line-height: 1.9;
        border-left: 4px solid #4a90e2;
        margin-bottom: 15px;
      }

      .evaluation-content {
        background-color: #f0f8f0;
        padding: 18px;
        border-radius: 5px;
        white-space: pre-wrap;
        font-size: 14px;
        line-height: 1.9;
        border-left: 4px solid #90ee90;
        margin-bottom: 15px;
      }

      .key-points {
        background-color: #fffbf0;
        padding: 15px 18px;
        border-radius: 5px;
        border-left: 4px solid #ffd700;
        margin-top: 10px;
      }

      .key-points-title {
        font-size: 13px;
        font-weight: 600;
        color: #666;
        margin-bottom: 8px;
      }

      .key-point {
        font-size: 13px;
        line-height: 1.7;
        margin-bottom: 5px;
        padding-left: 15px;
        position: relative;
      }

      .key-point::before {
        content: '•';
        position: absolute;
        left: 0;
        color: #4a90e2;
        font-weight: 700;
      }

      .comprehensive-conclusion {
        background-color: #f9f9f9;
        padding: 25px;
        border-radius: 5px;
        border-left: 4px solid #333;
        margin-top: 30px;
        page-break-inside: avoid;
      }

      .conclusion-title {
        font-size: 18px;
        font-weight: 700;
        color: #000;
        margin-bottom: 15px;
      }

      .conclusion-content {
        white-space: pre-wrap;
        font-size: 14px;
        line-height: 1.8;
        color: #000;
        margin-bottom: 15px;
      }

      .conclusion-lists {
        display: flex;
        flex-direction: column;
        gap: 12px;
        margin-top: 15px;
      }

      .conclusion-list {
        flex: 1;
      }

      .list-title {
        font-size: 14px;
        font-weight: 600;
        color: #333;
        margin-bottom: 8px;
      }

      .list-item {
        font-size: 13px;
        line-height: 1.6;
        padding-left: 15px;
        margin-bottom: 5px;
        position: relative;
      }

      .strengths .list-item::before {
        content: '✓';
        position: absolute;
        left: 0;
        color: #90ee90;
        font-weight: 700;
      }

      .weaknesses .list-item::before {
        content: '△';
        position: absolute;
        left: 0;
        color: #ff6b6b;
        font-weight: 700;
      }

      .recommendations .list-item::before {
        content: '→';
        position: absolute;
        left: 0;
        color: #4a90e2;
        font-weight: 700;
      }

      .page-break {
        page-break-before: always;
      }

      .subject-break {
        page-break-after: always;
      }

      @media print {
        body {
          padding: 20px;
        }

        .page-break {
          page-break-before: always;
        }

        .subject-break {
          page-break-after: always;
        }
      }
    </style>
  </head>
  <body>
    <!-- 헤더 -->
    <div class='header'>
      <div class='header-title'>세부능력특기사항 분석 보고서</div>
      <div class='header-date'>{{generatedAt}}</div>
    </div>

    <!-- 과목별 분석 -->
    {{#each subject_analyses}}
      <div class='section {{#unless @last}}subject-break{{/unless}}'>
        <!-- 과목명 -->
        <h2 class='subject-title'>{{subject_name}}</h2>

        <!-- 세부능력특기사항 -->
        {{#if summary}}
          <div class='subsection'>
            <h3 class='subsection-title'>세부능력특기사항</h3>
            <div class='content'>{{summary}}</div>
          </div>
        {{/if}}

        {{#if analysis}}
          <div class='subsection'>
            <h3 class='subsection-title'>세부능력특기사항</h3>
            <div class='content'>{{analysis}}</div>
          </div>
        {{/if}}

        <!-- 평가 결과 -->
        {{#if evaluation}}
          <div class='subsection'>
            <h3 class='subsection-title'>평가 결과</h3>
            <div class='evaluation-content'>{{evaluation}}</div>
          </div>
        {{/if}}

        <!-- 핵심 포인트 -->
        {{#if key_points}}
          {{#if key_points.length}}
            <div class='key-points'>
              <div class='key-points-title'>핵심 포인트</div>
              {{#each key_points}}
                <div class='key-point'>{{this}}</div>
              {{/each}}
            </div>
          {{/if}}
        {{/if}}
      </div>
    {{/each}}

    <!-- 종합 결론 -->
    {{#if comprehensive_conclusion}}
      <div class='comprehensive-conclusion page-break'>
        <h2 class='conclusion-title'>종합 결론</h2>
        
        {{#if comprehensive_conclusion.conclusion}}
          <div class='conclusion-content'>{{comprehensive_conclusion.conclusion}}</div>
        {{/if}}

        <div class='conclusion-lists'>
          {{#if comprehensive_conclusion.strengths}}
            {{#if comprehensive_conclusion.strengths.length}}
              <div class='conclusion-list strengths'>
                <div class='list-title'>강점</div>
                {{#each comprehensive_conclusion.strengths}}
                  <div class='list-item'>{{this}}</div>
                {{/each}}
              </div>
            {{/if}}
          {{/if}}

          {{#if comprehensive_conclusion.weaknesses}}
            {{#if comprehensive_conclusion.weaknesses.length}}
              <div class='conclusion-list weaknesses'>
                <div class='list-title'>보완점</div>
                {{#each comprehensive_conclusion.weaknesses}}
                  <div class='list-item'>{{this}}</div>
                {{/each}}
              </div>
            {{/if}}
          {{/if}}

          {{#if comprehensive_conclusion.recommendations}}
            {{#if comprehensive_conclusion.recommendations.length}}
              <div class='conclusion-list recommendations'>
                <div class='list-title'>추천사항</div>
                {{#each comprehensive_conclusion.recommendations}}
                  <div class='list-item'>{{this}}</div>
                {{/each}}
              </div>
            {{/if}}
          {{/if}}
        </div>
      </div>
    {{/if}}
  </body>
</html>
