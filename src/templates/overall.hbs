<!-- src/pdf/templates/overall-analysis.hbs -->
<html lang='ko'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>종합 분석 보고서</title>
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@300;400;500;700&display=swap');

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: 'Noto Sans KR', sans-serif;
        line-height: 1.8;
        color: #000;
        margin: 0;
        padding: 40px;
        background-color: #ffffff;
        font-size: 14px;
      }

      .header {
        text-align: center;
        margin-bottom: 40px;
        padding-bottom: 20px;
        border-bottom: 3px solid #333;
      }

      .header-title {
        font-size: 24px;
        font-weight: 700;
        color: #000;
        margin-bottom: 10px;
      }

      .header-subtitle {
        font-size: 16px;
        color: #666;
        font-weight: 500;
      }

      .header-date {
        font-size: 14px;
        color: #999;
        margin-top: 8px;
      }

      .section {
        margin-bottom: 40px;
        page-break-inside: avoid;
      }

      .section-title {
        font-size: 20px;
        font-weight: 700;
        color: #000;
        margin-bottom: 25px;
        padding-bottom: 12px;
        border-bottom: 2px solid #333;
        position: relative;
      }

      .evaluation-card {
        background-color: #f9f9f9;
        border-left: 5px solid #4a90e2;
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 20px;
      }

      .evaluation-title {
        font-size: 17px;
        font-weight: 700;
        color: #000;
        margin-bottom: 12px;
      }

      .evaluation-content {
        white-space: pre-wrap;
        font-size: 14px;
        line-height: 1.8;
        color: #444;
      }

      .page-break {
        page-break-before: always;
      }

      @media print {
        body {
          padding: 20px;
        }
        .page-break {
          page-break-before: always;
        }
      }
    </style>
  </head>
  <body>
    <!-- 헤더 -->
    <div class='header'>
      <div class='header-title'>종합 분석 보고서</div>
      <div class='header-subtitle'>Overall Analysis Report</div>
      <div class='header-date'>{{generatedAt}}</div>
    </div>

    <!-- 비교과 평가 -->
    {{#if non_curriculum_evaluation}}
      <div class='section'>
        <h2 class='section-title'>비교과 평가</h2>
        <div class='evaluation-card'>
          <div class='evaluation-title'>비교과 활동 평가</div>
          <div
            class='evaluation-content'
          >{{non_curriculum_evaluation.evaluation}}</div>
        </div>
      </div>
    {{/if}}

    <!-- 진로 역량 평가 -->
    {{#if career_competency_evaluation}}
      <div class='section page-break'>
        <h2 class='section-title'>진로 역량 평가</h2>
        <div class='evaluation-card'>
          <div class='evaluation-title'>진로 역량 분석</div>
          <div
            class='evaluation-content'
          >{{career_competency_evaluation.evaluation}}</div>
        </div>
      </div>
    {{/if}}

    <!-- 공동체 역량 평가 -->
    {{#if community_competency_evaluation}}
      <div class='section page-break'>
        <h2 class='section-title'>공동체 역량 평가</h2>
        <div class='evaluation-card'>
          <div class='evaluation-title'>공동체 역량 분석</div>
          <div
            class='evaluation-content'
          >{{community_competency_evaluation.evaluation}}</div>
        </div>
      </div>
    {{/if}}
  </body>
</html>